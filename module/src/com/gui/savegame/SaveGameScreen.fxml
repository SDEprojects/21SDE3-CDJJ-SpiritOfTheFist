<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: Black;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui.savegame.SaveGameSceneController">
   <children>
      <Button fx:id="saveGameBtn" layoutX="180.0" layoutY="275.0" mnemonicParsing="false" onAction="#saveGameBtnActionEvent" prefHeight="71.0" prefWidth="189.0" style="-fx-background-color: Orange;" text="Yes">
         <font>
            <Font size="36.0" />
         </font></Button>
      <Button fx:id="doNotSaveGameBtn" layoutX="418.0" layoutY="275.0" mnemonicParsing="false" onAction="#doNotSaveGameBtnActionEvent" prefHeight="71.0" prefWidth="189.0" style="-fx-background-color: Orange;" text="No">
         <font>
            <Font size="36.0" />
         </font></Button>
      <Label layoutX="24.0" layoutY="82.0" prefHeight="145.0" prefWidth="760.0" text="This save file will overwrite any previous save. Are you sure you want to save game?" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
         <font>
            <Font size="36.0" />
         </font>
         <textFill>
            <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.843137264251709" green="0.5803921818733215" blue="0.05882352963089943" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </textFill>
      </Label>
   </children>
</AnchorPane>
